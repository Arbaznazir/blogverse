<div class="card shadow-sm">
  <div class="card-body">

    <h2 class="card-title mb-1"><%= @post.title %></h2>

    <p class="text-muted small mb-3">
      by <%= @post.user.name %> â€¢ <%= time_ago_in_words(@post.created_at) %> ago
    </p>

    <p class="card-text" style="white-space: pre-line;">
      <%= @post.body %>
    </p>

    <% if owner?(@post) %>
  <hr>
  <%= link_to "Edit", edit_post_path(@post), class: "btn btn-warning btn-sm" %>
  <%= button_to "Delete", @post,
        method: :delete,
        form: { data: { turbo_confirm: "Delete this post?" } },
        class: "btn btn-danger btn-sm ms-2" %>
<% end %>

    <hr>
    <%= link_to "Back to Posts", posts_path, class: "btn btn-outline-secondary btn-sm" %>
  </div>
</div>
