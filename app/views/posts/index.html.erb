<h1 class="mb-4">All Posts</h1>

<% if logged_in? %>
  <%= link_to "Write a new post", new_post_path, class: "btn btn-primary mb-3" %>
<% end %>

<% @posts.each do |post| %>
  <div class="card mb-3 shadow-sm">
    <div class="card-body">

      <h5 class="card-title">
        <%= link_to post.title, post, class: "text-decoration-none" %>
      </h5>

      <p class="card-subtitle text-muted small mb-2">
        by <%= post.user.name %> â€¢ <%= time_ago_in_words(post.created_at) %> ago
      </p>

      <p class="card-text">
        <%= truncate(post.body, length: 150) %>
      </p>

      <%= link_to "Read More", post, class: "btn btn-outline-primary btn-sm" %>
    </div>
  </div>
<% end %>
